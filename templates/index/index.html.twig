{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}

<style>
    .index { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .index code { background: #f5f5f5; padding: 2px 6px; }
</style>

    <main class="index">
        <div class="main-holder">
            <div class="grid-header">
                <h1>Wellcome to Your Tasker</h1>
            </div>

            {% for task in tasks %}
                <div class="grid-container">
                    <section class="ad-container">
                        <div class="ad-section-container">
                            <div class="ad-head-container">
                                <h3 class="">{{ task.title }}</h3>
                            </div>
                            <div class="ad-main-container">
                                <p class="">Deadline: <span style="font-weight: bold">{{ task.dueDate|date('d-m-Y') }}</span></p>
                            </div>
                            <div class="ad-main-container">
                                <p class="">{{ task.task }}</p>
                            </div>
                        </div>
                    </section>
                </div>
            {% endfor %}
        </div>
    </main>
{% endblock %}